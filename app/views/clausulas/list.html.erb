<p id="notice"><%= notice %></p>

<h1>Lista de Clausulas </h1>

<table>
  <thead>
  <tr>
    <th>Titulo</th>
    <th>Descricao</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @clausulas.each do |clausula| %>
      <tr>
        <td><%= clausula.titulo %></td>
        <td><%= clausula.descricao %></td>
        <td><%= link_to 'Remover', remove_clausula_path(@contrato, clausula), method: :delete %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Back', contrato_path(@contrato) %>
